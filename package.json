{
  "name": "cdk",
  "version": "0.1.0",
  "bin": {
    "cdk": "bin/cdk.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk:ml:run": "cdk --profile admin@ml --app 'npx tsx ./ml-platform/cdk/bin/sagemaker.ts'",
    "cdk:ml:dev": "npm run cdk:ml:run -- -c env=dev  --require-approval never",
    "cdk:workload:run": "cdk --profile admin@dev --app 'npx tsx ./workloads/cdk/bin/workload.ts'",
    "cdk:workload:dev": "npm run cdk:workload:run -- -c env=dev  --require-approval never",
    "cdk:data:run": "cdk --profile admin@data --app 'npx tsx ./data-platform/cdk/bin/data.ts'",
    "cdk:data:dev": "npm run cdk:data:run -- -c env=dev  --require-approval never"
  },
  "devDependencies": {
    "@types/node": "^22.18.12",
    "aws-cdk": "^2.1031.0",
    "aws-cdk-lib": "^2.221.0",
    "constructs": "^10.4.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "source-map-support": "^0.5.21"
  }
}
